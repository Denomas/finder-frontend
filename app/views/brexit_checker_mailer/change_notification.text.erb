<%= t("brexit_checker_mailer.change_notification.#{@notification.type}.description") %>

<%= t("brexit_checker_mailer.change_notification.#{@notification.type}.header") %>

<% if @action.title_url.present? %>
[<%= @action.title %>](<%= notification_email_link(@action.title_url, @notification) %>)
<% else %>
<%= @action.title %>
<% end %>

<%= @action.consequence if @action.consequence.present? %>

<%= @action.exception if @action.exception.present? %>

<% if @notification.note.present? %>
Changes made
<%= @notification.note %>
<% end %>

Updated <%= Date.parse(@notification.date).strftime("%-d %B %Y") %>

<% if @action.guidance_url.present? %>
<%= @action.guidance_prompt || t("brexit_checker_mailer.change_notification.guidance_prompt") %>
[<%= @action.guidance_link_text %>](<%= notification_email_link(@action.guidance_url, @notification)  %>)
<% end %>
