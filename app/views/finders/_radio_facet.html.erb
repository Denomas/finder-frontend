<div class='facet radio-facet'>
  <span class="legend"><%= radio_facet.name %></span>
  <fieldset>
  <% radio_facet.allowed_values.each do | option | %>
    <label for='<%= option['value']%>'>
      <input type="radio" name='<%=radio_facet.key%>' value='<%= option['value']%>' id='<%= option['value']%>'>
      <%= option['label']%>
    </label>
  <% end %>
  </fieldset>
</div>

