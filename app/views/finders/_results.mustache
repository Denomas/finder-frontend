{{#atom_url}}
  <div class="feed">
    <span>Get updates to this list</span>
    <a href="{{atom_url}}">feed</a>
  </div>
{{/atom_url}}

<ul data-module="track-click">

  {{#display_grouped_results }}
    {{#documents_by_facets}}
      {{> finders/_grouped_results }}
    {{/documents_by_facets}}
  {{/display_grouped_results}}

  {{^display_grouped_results}}
    {{#documents}}
      {{> finders/_results_document }}
    {{/documents}}
  {{/display_grouped_results}}

</ul>

{{#zero_results}}
  <div class='no-results govuk-!-font-size-19'>
    <p class='govuk-body govuk-!-font-weight-bold'>There are no matching results.</p>
    <p class='govuk-body'>Improve your search results by:</p>
    <ul class="govuk-list">
      <li> - removing filters</li>
      <li> - double-checking your spelling</li>
      <li> - using fewer keywords</li>
      <li> - searching for something less specific</li>
    </ul>
  </div>
{{/zero_results}}

