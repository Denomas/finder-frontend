{{#atom_url}}
  <div class="feed">
    <span>Get updates to this list</span>
    <a href="{{atom_url}}">feed</a>
  </div>
{{/atom_url}}

<ul data-module="track-click">

  {{#display_grouped_results }}
    {{#documents_by_facets}}
      {{> finders/_grouped_results }}
    {{/documents_by_facets}}
  {{/display_grouped_results}}

  {{^display_grouped_results}}
    {{#documents}}
      {{> finders/_results_document }}
    {{/documents}}
  {{/display_grouped_results}}

</ul>

{{#zero_results}}
  <div class='no-results'>
    <p class='govuk-body govuk-!-font-size-19 govuk-!-font-weight-bold'>There are no matching results.</p>
    <p class='govuk-body govuk-!-font-size-19'>Improve your search results by:</p>
    <ul class="govuk-list">
      <li class='govuk-!-font-size-19'> - removing filters<li>
      <li class='govuk-!-font-size-19'> - double-checking your spelling<li>
      <li class='govuk-!-font-size-19'> - using fewer keywords<li>
      <li class='govuk-!-font-size-19'> - searching for something less specific<li>
    </ul>
  </div>
{{/zero_results}}

