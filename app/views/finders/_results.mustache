{{#atom_url}}
  <div class="feed">
    <span>Get updates to this list</span>
    <a href="{{atom_url}}">feed</a>
  </div>
{{/atom_url}}

<ul data-module="track-click">
  {{#display_grouped_results }}
    {{#documents_by_facets}}
      {{> finders/_grouped_results }}
    {{/documents_by_facets}}
  {{/display_grouped_results}}

  {{^display_grouped_results}}
    {{#documents}}
      {{> finders/_results_document }}
    {{/documents}}
  {{/display_grouped_results}}

</ul>

{{#zero_results}}
  <div class='no-results'>
    <h2 class='gem-c-heading'>There are no matching results.</h2>
    <p>Try making your search broader.</p>
  </div>
{{/zero_results}}

