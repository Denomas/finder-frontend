<% if content_item.description %>
  <meta name="description" content="<%= content_item.description %>">
<% end %>
<% if content_item.no_index? %>
  <meta name="robots" content="noindex">
<% end %>
<link rel="alternate" type="application/json" href="/api/content<%= content_item.base_path %>">

<%= render 'govuk_publishing_components/components/meta_tags', content_item: content_item.as_hash %>
<%= render 'govuk_publishing_components/components/machine_readable_metadata',
           schema: :search_results_page,
           content_item: content_item.as_hash %>
