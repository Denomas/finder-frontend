<% action =
  if Rails.configuration.relevancy_prototype
    params[:q].present? ? "/search/all" : "/"
  else
    "/search"
  end
%>
<% content_for :body_classes, "search" %>
<% content_for :title, "Search" %>
<% content_for :extra_headers do %>

  <meta name="description"
        content="Search GOV.UK." />
<% end %>
<!-- <main id="content" role="main" class="search-wrapper search-wrapper--no-search-term"> -->
<%= render 'finders/flash_message' %>
<main id="content" role="main" class="search no-search-term">
  <form action="<%= action %>" method="get" accept-charset="utf-8" class="search-header" role="search">
    <%= render 'search_field' %>
  </form>
</main>
