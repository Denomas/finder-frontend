<% items.each do | action | %>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
      <p class="govuk-body govuk-!-font-weight-bold">
        <a href="<%= action.path %>" class="govuk-link"><%= action.title %></a>
      </p>
      <% if action.description.present? %>
        <p class="govuk-body govuk-!-font-size-16">
          <%= action.description %>
        </p>
      <% end %>
    </div>
    <div class="govuk-grid-column-one-quarter">
      <% if action.due_date.present? %>
        <p class="govuk-body govuk-!-font-size-16 govuk-!-font-weight-bold checklist-result__leadtime">
          Due by <%= action.due_date %>
        </p>
      <% end %>
    </div>
  </div>
<% end %>
